<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/t_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounderd_tlist"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/t_image_show"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_pic">
            <ImageView
                android:id="@+id/t_image"
                android:layout_width="match_parent"
                android:layout_height="120dp" />
            <LinearLayout
                android:id="@+id/t_rating"
                android:orientation="horizontal"
                android:layout_below="@id/t_image"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/light_tv"
                android:padding="3dp">
                <ImageView
                    android:id="@+id/moon_one"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/moon_two"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/moon_three"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/moon_four"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/moon_five"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


            </LinearLayout>
            <TextView
                android:id="@+id/t_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t_image"
                android:layout_alignParentRight="true"
                android:background="@drawable/light_tv"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:textSize="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/t_image_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/last_cost"
                android:layout_alignParentRight="true"
                android:textSize="11dp"
                android:textColor="@android:color/black"
                android:text="hhh"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/new_cost"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginLeft="7dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/t_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="#ffe666"
                android:text="ffffdddddd"
                android:padding="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/roundedbutton"/>
            <TextView
                android:id="@+id/t_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t_percent"
                android:background="@drawable/tlist"
                android:paddingRight="7dp"
                android:textSize="17dp"
                android:textColor="@android:color/black"
                android:text="kkkkk"
                android:gravity="right"
                android:textAlignment="gravity"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>