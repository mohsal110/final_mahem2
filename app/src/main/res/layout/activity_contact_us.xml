<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:id="@+id/title"
            android:textSize="20dp"
            android:text="تماس با ما"
            android:gravity="center|bottom"
            android:paddingBottom="8dp"
            android:paddingRight="3dp"/>

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher_llogo" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDefaultBackground"
        >

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_header" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/p1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_header"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@android:color/black"
 android:text="جهت پیشنهاد یا انتقاد و یا گزارش وجود مشکل در اپلیکیشن ماهم
 می توانید به روش های زیر مارا یاری کنید:"></TextView>
        <TextView
            android:id="@+id/p2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:text="
آی دی تلگرام :Mahem_App
آدرس ایمیل :Mahem_App@Gmail.Com"/>
        <TextView

            android:id="@+id/p3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p2"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:text="
تیم مدیریت و پشتیبانی ماهم در حال حاضر در تهران اقامت دارند
اما اقدامات لازم جهت انتقال دفتر به گنبد کاووس در دست اقدام
بوده و آدرس دقیق دفتر در گنبد کاووس اعلام خواهد شد.
"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p3"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:text="

در صورت ایجاد مزاحمت برای شما ، می توانید با مراجعه به سایت
پلیس فتا به آدرس www.cyberpolice.ir از اطلاعات تماس
پلیس فتای محل سکونت خود آگاه شوید و موضوع را از آن طریق پیگیری کنید."/>


        <include
            layout="@layout/bottom_navigation"
            android:id="@+id/rr"
            ></include>
    </RelativeLayout>

</LinearLayout>