<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/row_d"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backwhite"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/name_d"
        android:layout_toLeftOf="@id/row_d"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backwhite"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="5dp"

        />
    <TextView
        android:id="@+id/manage_d"
        android:layout_toLeftOf="@id/name_d"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backwhite"

        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:gravity="center"
        />
    <TextView

        android:id="@+id/phone_d"
        android:layout_toLeftOf="@id/manage_d"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backwhite"

        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"


        android:gravity="center"
        android:padding="5dp"/>
</RelativeLayout>