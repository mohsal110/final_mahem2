<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobBank.JobBank_Sabt">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ارسال"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            android:drawableLeft="@mipmap/ic_check"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/send"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:id="@+id/title"
            android:textSize="20dp"
            android:text="بانک مشاغل"
            android:gravity="center|bottom"
            android:paddingBottom="8dp"
            android:paddingRight="3dp"
            android:layout_toLeftOf="@+id/ic_logo"/>
        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher_llogo"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/cameraa"
            android:id="@+id/img"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/img"
            android:background="@android:color/black"
            android:id="@+id/line"
            android:layout_marginBottom="45dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/job_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"

                android:src="@drawable/cameraa"
                app:civ_border_overlay="true"
                app:civ_border_color="@android:color/black"
                app:civ_border_width="2dp"

                android:layout_marginTop="130dp"
                />
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/line"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p1"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="مدیریت"
                android:layout_alignParentRight="true"
                android:textSize="13dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/ic_launcher_foreground_star"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p1"
            android:layout_below="@+id/line"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E1"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p2"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="نوع صنف"
                android:layout_alignParentRight="true"
                android:textSize="13dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher_foreground_star" />
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p2"
            android:layout_below="@+id/E1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E2"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:inputType="none"
            android:focusable="false"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p3"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:text="شماره ثبت"
                android:textSize="13dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p3"
            android:layout_below="@+id/E2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E3"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p4"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="تلفن ثابت"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher_foreground_star" />
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p4"
            android:layout_below="@+id/E3"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E4"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p5"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
             android:layout_centerInParent="true"
                android:text="تلفن همراه"
                android:textSize="13dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p5"
            android:layout_below="@+id/E4"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E5"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p6"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:text="فکس"
                android:textSize="13dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p6"
            android:layout_below="@+id/E5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E6"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p7"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="آدرس"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/ic_launcher_foreground_star"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p7"
            android:layout_below="@+id/E6"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E7"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p7"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p8"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
              android:layout_centerInParent="true"
                android:text="تلگرام"
                android:textSize="13dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p8"
            android:layout_below="@+id/E7"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E8"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p9"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:text="اینستاگرام"
                android:textSize="13dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p9"
            android:layout_below="@+id/E8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E9"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:padding="5dp"
            android:layout_below="@+id/p9"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/p10"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
              android:layout_centerInParent="true"
                android:text="ایمیل"
                android:textSize="13dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/job_sabt"
            android:layout_toLeftOf="@+id/p10"
            android:layout_below="@+id/E9"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/E10"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>


            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/job_sabt"
                android:padding="5dp"
                android:layout_below="@+id/p10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/p11"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                   android:layout_centerInParent="true"
                    android:text="توضیحات"
                    android:textSize="13dp" />

            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/job_sabt"
                android:layout_toLeftOf="@+id/p11"
                android:layout_below="@+id/E10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/E11"
                android:layout_marginBottom="5dp"
                android:gravity="center"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</android.support.constraint.ConstraintLayout>