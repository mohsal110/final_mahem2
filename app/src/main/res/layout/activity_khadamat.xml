<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Groups.Khadamat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:id="@+id/title"
            android:textSize="22dp"
            android:text="خدمات"
            android:gravity="center|bottom"
            android:paddingBottom="8dp"
            android:paddingRight="3dp"/>
        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher_llogo" />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="پذیرایی مجالس و مراسم"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn1"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="آرایشگری و زیبایی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn2"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نظافت و خدمات منزل"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn3"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="اسباب کشی و حمل و نقل"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn4"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="پرستاری و درمانی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn5"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="خدمات ساختمانی و دکوراسیون"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn6"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تعمیرات و تعمیرگاه"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn7"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="آموزشی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn8"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="خدمات کامپیوتر و موبایل"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn9"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ترجمه و تایپ"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn10"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مالی و حسابداری و بیمه"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn11"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="طراحی گرافیک و چاپ"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn12"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="سایر خدمات"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn13"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
