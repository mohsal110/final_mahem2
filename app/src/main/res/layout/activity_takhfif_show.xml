<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#eeeeee"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout


            android:paddingBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/t_Show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                >




                <android.support.v4.view.ViewPager
                    android:id="@+id/takhfif_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:id="@+id/t_SlideDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_below="@id/takhfif_view_pager"></LinearLayout>
                </RelativeLayout>
            <TextView
                android:id="@+id/t_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/t_Show"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                />
            <RelativeLayout
                android:id="@+id/takhfif_details"
                android:layout_alignParentRight="true"
                android:layout_below="@id/t_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounderd_tv"
                android:padding="10dp">


                <TextView
                    android:id="@+id/ttv"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمان باقی مانده"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/day"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/ttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"

                    />
                <TextView
                    android:id="@+id/hour"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/ttv"
                    android:layout_toRightOf="@id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"


                    />
                <TextView
                    android:id="@+id/minute"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/ttv"
                    android:layout_toRightOf="@id/hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"



                    />

                <TextView
                    android:id="@+id/day_tv"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:text="روز"
                    />
                <TextView
                    android:id="@+id/hour_tv"
                    android:layout_marginLeft="17dp"
                    android:layout_below="@id/hour"
                    android:layout_toRightOf="@id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"

                    android:text="ساعت"
                    />
                <TextView
                    android:id="@+id/min_tv"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/minute"
                    android:layout_toRightOf="@id/hour_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"

                    android:text="دقیقه"
                    />
                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="#ffe666"

                    android:padding="5dp"
                    android:background="@drawable/roundedbutton"/>



                <TextView

                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پرداختی شما"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_alignBaseline="@+id/ttv"
                    android:layout_alignBottom="@+id/ttv"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/cost_tv" />
                <TextView
                    android:id="@+id/n_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/cost_tv"
                    android:layout_marginRight="30dp"
                    android:textColor="@android:color/holo_red_dark"

                    />
                <TextView
                    android:id="@+id/p_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/n_cost"
                    android:layout_marginRight="30dp"
                    android:textColor="@android:color/black"

                    android:foreground="@drawable/border"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/t_options"
                android:layout_below="@id/takhfif_details"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/t_optxt"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounderd_tv"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titlestyles"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@android:color/white"
                    android:text="ویژگی ها"
                    android:padding="7dp"
                    />
            </RelativeLayout>
            <RelativeLayout

                android:id="@+id/t_des_rel"
                android:layout_below="@id/t_options"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/t_des"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounderd_tv"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    />
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titlestyles"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@android:color/white"
                    android:text="توضیحات"
                    android:padding="7dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_below="@id/t_des_rel"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/google_maps"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="برای مشاهده نقشه ، اینجا کلیک کنید"
                    android:layout_centerInParent="true"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>
            </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#7effffff"
        android:layout_alignParentTop="true"
        android:padding="7dp">
        <ImageView
            android:id="@+id/collections"
            android:src="@drawable/one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"

            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arr"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"


            />

        <TextView
            android:id="@+id/takhfif_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/back"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/share"
            android:src="@android:drawable/ic_menu_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/collections"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#82bebdbd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/chat_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_alignParentLeft="true"
            android:background="@drawable/roundedbutton"
            android:layout_margin="5dp"
            android:drawableRight="@android:drawable/stat_notify_chat"
            android:paddingRight="10dp"
            android:paddingLeft="40dp"
            android:text="چت"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/call_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_alignParentRight="true"
            android:background="@drawable/roundedbutton"
            android:layout_margin="5dp"
            android:paddingRight="5dp"
            android:text="اطلاعات تماس"
            android:drawableRight="@android:drawable/stat_sys_phone_call"
            android:textSize="20sp"

            />
    </LinearLayout>
    
</RelativeLayout>
