<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ffffff"
    >

<ImageView
    android:layout_width="110dp"
    android:layout_height="100dp"
    android:src="@drawable/circle_imageview"
    android:layout_centerHorizontal="true"
    style="@style/Base.Widget.AppCompat.AutoCompleteTextView"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bottom_sheet_background"
        android:layout_marginTop="70dp">
    <TextView
        android:id="@+id/near"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تخفیف های نزدیک به من"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="@drawable/near_me_bottom_sheet_row"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="دسته بندی"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="@drawable/near_me_bottom_sheet_row"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اطلاع از تخفیف ها"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="@drawable/near_me_bottom_sheet_row"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تخفیف هاروی نقشه"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="@drawable/near_me_bottom_sheet_row"
        android:padding="8dp"/>
</LinearLayout>
</RelativeLayout>