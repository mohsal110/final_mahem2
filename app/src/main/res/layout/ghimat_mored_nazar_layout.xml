<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d5d6d6">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#d5d6d6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="رهن را وارد کنید."
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:id="@+id/call1"
                    android:textSize="15dp"
                    android:focusable="true"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مبلغ را به تومان وارد کنید."
                    android:gravity="center"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رهن"
                android:layout_weight="3"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#d5d6d6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اجاره را وارد کنید."
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:id="@+id/Call2"
                    android:textSize="15dp"
                    android:focusable="true"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مبلغ را به تومان وارد کنید."
                    android:gravity="center"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   اجاره"
                android:layout_weight="3"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="قابلیت تبدیل رهن به اجاره"
                android:id="@+id/RTE"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تایید"
            android:textSize="20dp"
            android:id="@+id/ok"/>

    </LinearLayout>
</LinearLayout>