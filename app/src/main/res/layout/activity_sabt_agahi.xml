<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add.SabtAgahi">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:id="@+id/title"
                android:textSize="22dp"
                android:text="ثبت آگهی"
                android:gravity="center|bottom"
                android:paddingBottom="8dp"
                android:paddingRight="3dp"/>
            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher_llogo" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="استخدامی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn1"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تخفیف یاب"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn2"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="املاک"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn3"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="وسایل نقلیه"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn4"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لوازم الکترونیکی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn5"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لوازم خانگی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn6"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="خدمات"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn7"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تجهیزات و عمده فروشی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn8"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="سرگرمی و فراغت"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn9"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="وسایل شخصی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:id="@+id/btn10"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
