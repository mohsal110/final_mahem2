<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add.SabtAgahi_Takhfif">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_norm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="android.niky.sabtagahi.Norm"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ارسال"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:textSize="20dp"
                android:drawableLeft="@mipmap/ic_check"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/send"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:id="@+id/title"
                android:textSize="20dp"
                android:text="ثبت رایگان آگهی"
                android:gravity="center"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="انتخاب تصویر مناسب برای آگهی"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="آگهی های شامل تصویر،بیش از 5 برابر دیده می شوند."
            android:gravity="center"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:src="@drawable/icons88"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:src="@drawable/icons88"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:src="@drawable/icons88"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:src="@drawable/icons88"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/c5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:src="@drawable/icons88"
                android:padding="2dp" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="انتخاب گروه"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T1"
                    android:lines="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="عنوان آگهی (حداقل 10  حرف)"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T2"
                    android:lines="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="درصد تخفیف"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T3"
                    android:inputType="number"
                    android:lines="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" قیمت اصلی"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T4"
                    android:lines="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="قیمت با تخفیف"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T5"
                    android:lines="1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="تعیین موقعیت"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T6"
                    android:inputType="none"
                    android:focusable="false"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اطلاعات تماس"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T7"
                    android:inputType="none"
                    android:focusable="false"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ویژگی ها"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T8"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="توضیحات"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T9"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="موقعیت روی نقشه"
                    android:backgroundTint="@color/backColor"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/T10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="برای نمایش در «تخفیف های روی نقشه» حتما این قسمت را فعال کنید."
                    android:gravity="center"
                    android:paddingBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="با قوانین و شرایط موافقم"
                        android:layout_centerInParent="true"
                        android:id="@+id/rule"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/map_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/google_maps"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>