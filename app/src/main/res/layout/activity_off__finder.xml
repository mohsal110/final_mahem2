<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuItems.Off_Finder">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:id="@+id/title"
                android:textSize="20dp"
                android:text="تخفیف یاب"
                android:gravity="center|bottom"
                android:paddingBottom="8dp"
                android:paddingRight="3dp"/>
            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher_llogo" />


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تخفیف آخر هفته"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn1"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="رستوران و کافی شاپ"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn2"                />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="آرایشی بهداشتی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn3"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="سلامتی و پزشکی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn4"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تفریحی و ورزشی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn5"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لوازم جانبی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn6"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="محصولات آرایشی و بهداشتی"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn7"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لوازم خودرو و ابزار"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn8"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="زیورآلات"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn9"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ظروف آشپزخانه و خانه"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn10"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="آموزش"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn11"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="هنر و تئاتر"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn12"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="خدمات"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn13"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="هتل و سفر"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn14"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لوازم سفر"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn15"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="پوشاک"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn16"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="لوازم التحریر"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn17"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="دیگر"
                    android:drawableLeft="@mipmap/ic_launcher_flsh"
                    android:drawableRight="@mipmap/ic_phone"
                    android:gravity="right|center"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/btn18"/>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>