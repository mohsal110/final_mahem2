<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuItems.Menu1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:id="@+id/title"
                android:textSize="23dp"
                android:text="منو"
                android:gravity="center|bottom"
                android:paddingBottom="8dp"
                android:paddingRight="3dp"/>
            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher_llogo" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/menu_back_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".Fragments.MenuFragment"


                >

                <ImageView

                    android:id="@+id/menu_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorDefaultBackground" />


                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/btn_bank"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView

                            android:id="@+id/img_bank"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_bank"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_bank"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="بانک مشاغل"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_off"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_off"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_off" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_off"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="تخفیف یاب"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_register"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_register"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_register"/>

                        <TextView
                            android:id="@+id/TV1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_register"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="ثبت نام"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/linearLayout1"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/btn_law"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_law"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_law"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_law"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="قوانین"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_ads"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_ads"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_ads"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_ads"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="آگهی"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_employment"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_employment"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_employment"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_employment"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="استخدامی"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/linearLayout2"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/btn_my_ads"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_my_ads"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_my_ads"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_my_ads"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="مدیریت آگهی های من"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_share"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_share"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_share"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_share"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="اشتراک گذاری"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_favorite"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_favorite"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_bookmark" />

                        <TextView


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_favorite"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="آگهی نشان شده"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/linearLayout3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/btn_about_us"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_about_us"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_about_us"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_about_us"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="درباره ما"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_setting"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_setting"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/ic_ic_setting"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_setting"
                            android:layout_centerHorizontal="true"
                            android:text="تنظیمات"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_contact_us"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/menu_item_background">

                        <ImageView
                            android:id="@+id/img_contact_us"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_ic_contact" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/img_contact_us"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="تماس با ما"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <include
        android:id="@+id/rr"
        layout="@layout/bottom_navigation"
        ></include>


</android.support.constraint.ConstraintLayout>