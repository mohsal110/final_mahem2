<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_message_body"
            android:text="سلام ، زنگ بزنین تا بتونم بهتر توضیح بدم"
            android:background="@drawable/itm_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textColor="#020202"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/time_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_message_body"
            android:layout_below="@+id/text_message_body"
            android:text="11:14"
            android:textSize="10dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>